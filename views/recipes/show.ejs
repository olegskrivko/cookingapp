<script>
  let voiceAssistantInput = document.querySelector(".voice-assistant-input");
  let voiceAssistantLabel = document.querySelector(".voice-assistant-label");
  let step = document.querySelectorAll(".step");
  let stepCount = step.length;
  let currentStep = 0;
  let stepToRead;

  if ("speechSynthesis" in window) {
    voiceAssistantLabel.innerText = "Voice assistant";
    voiceAssistantInput.checked = false;
    voiceAssistantInput.disabled = false;
    let SpeechRecognition;
    let recognition;

    voiceAssistantInput.addEventListener("change", () => {
      if (voiceAssistantInput.checked) {
        voiceAssistantLabel.innerText =
          "Voice commands: 'First step', 'Next step', 'Previous step', 'Repeat step', 'Last step'  Voice assistant";
        // All logic goes here!

        // Import the necessary libraries
        SpeechRecognition = window.SpeechRecognition || webkitSpeechRecognition;
        recognition = new SpeechRecognition();

        // Set up recognition parameters
        recognition.lang = "en-US";
        recognition.interimResults = false;
        recognition.maxAlternatives = 1;

        // Start the recognition process
        recognition.start();

        // Event listener for when speech is recognized
        recognition.addEventListener("result", (event) => {
          // Get the recognized text
          const command = event.results[0][0].transcript.toLowerCase();

          // Log the recognized command for debugging
          console.log("Recognized Command:", command);

          // Process the recognized command
          switch (command) {
            case "first step":
              firstStep();
              break;
            case "next step":
              if (currentStep < stepCount - 1) {
                console.log(currentStep, stepCount);
                nextStep();
              } else {
                console.log("No more steps after");
              }
              break;
            case "previous step":
              if (currentStep > 0) {
                previousStep();
              } else {
                console.log("No more steps before");
              }
              break;
            case "repeat step":
              repeatStep();
              break;
            case "last step":
              lastStep();
              break;
            // Add more commands as needed
            default:
              // Handle unrecognized commands
              console.log("Unrecognized Command");
          }
        });

        // Event listener for when recognition is ended
        recognition.addEventListener("end", () => {
          // Restart recognition after a short delay to enable continuous listening
          setTimeout(() => {
            recognition.start();
          }, 1000);
        });
      } else {
        voiceAssistantLabel.innerText = "Voice assistant";
        voiceAssistantInput.checked = false;
        voiceAssistantInput.disabled = false;
        // why stop doesnt work??
        recognition.stop();
        console.log("Speech recognition has stopped.");
      }
    });
  } else {
    voiceAssistantLabel.innerText = "Voice assistant is not supported in this browser.";
    voiceAssistantInput.disabled = true;
    voiceAssistantInput.checked = false;
  }

  function speakStep(step) {
    let speechSynthesisUtterance = new SpeechSynthesisUtterance();
    // Set the text to be spoken
    speechSynthesisUtterance.text = step;
    // Optionally, you can set other properties of the speechSynthesisUtterance, such as rate, pitch, voice, etc.
    speechSynthesisUtterance.rate = 0.8; // Set the rate to 0.8 (slower than normal)
    // speechSynthesisUtterance.pitch = 1.2; // Set the pitch to 1.2 (higher than normal)
    speechSynthesisUtterance.volume = 0.8; // Set the volume to 0.5 (half of the maximum volume)
    //let voices = speechSynthesis.getVoices(); // Get the available voices
    //speechSynthesisUtterance.voice = voices[0]; // Set the first available voice
    // Call the speechSynthesis.speak() method to start the speech synthesis
    window.speechSynthesis.speak(speechSynthesisUtterance);
  }

  function firstStep() {
    // read first step
    currentStep = 0;
    let firstStepToRead = step.item(currentStep).parentNode.innerText;
    // read step
    speakStep(firstStepToRead);
  }

  function nextStep() {
    // go to next step
    currentStep++;
    // read current step
    stepToRead = step.item(currentStep).parentNode.innerText;
    // read step
    speakStep(stepToRead);
  }

  function previousStep() {
    // go to previous step
    currentStep--;
    // read current step
    stepToRead = step.item(currentStep).parentNode.innerText;
    // read step
    speakStep(stepToRead);
  }

  function lastStep() {
    // read last step
    currentStep = stepCount - 1;
    stepToRead = step.item(currentStep).parentNode.innerText;
    // read step
    speakStep(stepToRead);
  }

  function repeatStep() {
    // read current step
    stepToRead = step.item(currentStep).parentNode.innerText;
    // read step
    speakStep(stepToRead);
  }
</script>

